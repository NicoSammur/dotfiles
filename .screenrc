startup_message off
autodetach on
# more scrollbacks!
defscrollback 10000
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'
multiuser on
acladd root
termcapinfo xterm|xterms|xs|rxvt ti@:te@
defc1 off
defutf8 on
# auto start
screen -t irssi 0 irssi
screen -t bash 1 bash
screen -t dir 2 bash
